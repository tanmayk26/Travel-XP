<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.darkfighter.basicui.Display_Car_Info"
    android:background="#e6f0f8">

    <EditText
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/editText_dlocation"
        android:hint="Location"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/editText_dcar_no"
        android:layout_alignStart="@+id/editText_dcar_no" />

    <EditText
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/editText_dcar_no"
        android:hint="Car no"
        android:layout_marginTop="66dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/textView_dcar_no"
        android:layout_toEndOf="@+id/textView_dcar_no" />

    <EditText
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/editText_dcar_name"
        android:hint="Car Name"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/editText_dcar_no"
        android:layout_alignLeft="@+id/editText_dcar_no"
        android:layout_alignStart="@+id/editText_dcar_no" />

    <EditText
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/editText_dcar_capacity"
        android:hint="Car Capacity"
        android:layout_below="@+id/editText_dcar_name"
        android:layout_alignLeft="@+id/editText_dcar_name"
        android:layout_alignStart="@+id/editText_dcar_name"
        android:layout_marginTop="27dp" />

    <EditText
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/editText_drate"
        android:hint="Rate"
        android:layout_marginTop="33dp"
        android:layout_below="@+id/editText_dcar_capacity"
        android:layout_alignLeft="@+id/editText_dcar_capacity"
        android:layout_alignStart="@+id/editText_dcar_capacity" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/switch_availability"
        android:checked="false"
        android:layout_below="@+id/editText_drate"
        android:layout_alignLeft="@+id/editText_drate"
        android:layout_alignStart="@+id/editText_drate"
        android:layout_marginTop="28dp" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Location"
        android:id="@+id/textView_dlocation"
        android:layout_alignBottom="@+id/editText_dlocation"
        android:layout_alignLeft="@+id/textView_dcar_no"
        android:layout_alignStart="@+id/textView_dcar_no"
        android:layout_alignTop="@+id/editText_dlocation" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Car no"
        android:id="@+id/textView_dcar_no"
        android:layout_alignTop="@+id/editText_dcar_no"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="33dp"
        android:layout_marginStart="33dp"
        android:layout_alignBottom="@+id/editText_dcar_no" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Car Name"
        android:id="@+id/textView_dcar_name"
        android:layout_alignTop="@+id/editText_dcar_name"
        android:layout_alignLeft="@+id/textView_dcar_no"
        android:layout_alignStart="@+id/textView_dcar_no"
        android:layout_alignBottom="@+id/editText_dcar_name" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Car Capacity"
        android:id="@+id/textView_dcar_cap"
        android:layout_alignTop="@+id/editText_dcar_capacity"
        android:layout_alignLeft="@+id/textView_dcar_name"
        android:layout_alignStart="@+id/textView_dcar_name"
        android:layout_alignBottom="@+id/editText_dcar_capacity" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Rate(Rs/km)"
        android:id="@+id/textView_drate"
        android:layout_alignTop="@+id/editText_drate"
        android:layout_alignLeft="@+id/textView_dcar_cap"
        android:layout_alignStart="@+id/textView_dcar_cap"
        android:layout_alignBottom="@+id/editText_drate" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Availability"
        android:id="@+id/textView_davailability"
        android:layout_alignTop="@+id/switch_availability"
        android:layout_alignLeft="@+id/textView_drate"
        android:layout_alignStart="@+id/textView_drate" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update"
        android:id="@+id/button_dupdate"
        android:onClick="onUpdate"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/switch_availability"
        android:layout_alignEnd="@+id/switch_availability"
        android:layout_marginBottom="25dp" />





</RelativeLayout>
