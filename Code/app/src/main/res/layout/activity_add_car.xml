<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.darkfighter.basicui.AddCar"
    android:background="#e6f0f8">

    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/editText_alocation"
        android:layout_gravity="center_horizontal"
        android:hint="Location"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/editText_acar_no"
        android:layout_gravity="center_horizontal"
        android:hint="Car Number"
        android:layout_marginTop="37dp"
        android:layout_below="@+id/editText_alocation"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/editText_acar_name"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="32dp"
        android:hint="Car Name"
        android:layout_below="@+id/editText_acar_no"
        android:layout_alignRight="@+id/editText_acar_no"
        android:layout_alignEnd="@+id/editText_acar_no" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/editText_acar_capacity"
        android:layout_marginTop="30dp"
        android:hint="Car Capacity"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/editText_acar_name"
        android:layout_alignLeft="@+id/editText_acar_name"
        android:layout_alignStart="@+id/editText_acar_name" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/editText_arate"
        android:layout_gravity="center_horizontal"
        android:hint="Rate in Rs/km"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/editText_acar_capacity"
        android:layout_alignLeft="@+id/editText_acar_capacity"
        android:layout_alignStart="@+id/editText_acar_capacity" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Add"
        android:id="@+id/button_adding"
        android:onClick="onAdding"
        android:layout_marginBottom="46dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />



</RelativeLayout>
